<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../styles/share-task.css"
            fx:controller="com.example.smarttask_frontend.tasks.controller.ShareTaskController">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="5">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Share Task" id="header-label"/>
            <Label fx:id="taskTitleLabel" text="Task Title" />
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="usernameColumn" text="User" prefWidth="280"/>
                    <TableColumn fx:id="actionColumn" text="Action" prefWidth="120" sortable="false"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="Close"
                    onAction="#closeWindow"
                    styleClass="button-close"/>
        </VBox>
    </bottom>

</BorderPane>